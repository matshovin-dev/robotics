# EditorConfig for robotics project
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C source files
[*.{c,h}]
indent_style = tab
indent_size = 8
max_line_length = 80

# Makefiles MUST use tabs
[Makefile]
indent_style = tab
indent_size = 8

# Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
